# .env.example -> .env

# Application Environment
ASPNETCORE_ENVIRONMENT=Development

# Development Database
DATABASE_DEV_HOST=localhost
DATABASE_DEV_PORT=5432
DATABASE_DEV_NAME=ecommerce_dev
DATABASE_DEV_USER=your_dev_username
DATABASE_DEV_PASSWORD=your_dev_password

# Test Database
DATABASE_TEST_HOST=localhost
DATABASE_TEST_PORT=5433
DATABASE_TEST_NAME=ecommerce_test
DATABASE_TEST_USER=your_test_username
DATABASE_TEST_PASSWORD=your_test_password


# Production Database (USE STRONG PASSWORDS!)
DATABASE_PROD_HOST=localhost
DATABASE_PROD_PORT=5434
DATABASE_PROD_NAME=ecommerce_prod
DATABASE_PROD_USER=your_prod_username
DATABASE_PROD_PASSWORD=your_strong_prod_password

# pgAdmin
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_pgadmin_password

# JWT Configuration
JWT_SECRET_KEY=Your_Super_Secret_Key_At_Least_32_Characters
JWT_ISSUER=EcommerceAPI
JWT_AUDIENCE=EcommerceAPI
JWT_EXPIRATION_MINUTES=60

# Redis
REDIS_CONNECTION_STRING=localhost:6379

# Iyzico Payment (Sandbox)
IYZICO_API_KEY=your_api_key
IYZICO_SECRET_KEY=your_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
